{{!
    @template qtype_ddingroups/specific_grade_detail_feedback
    Renders detailed grading feedback for grouped questions.
}}

{{#showpartialwrong}}
    {{#gradingtype}}
        <p class="gradingtype">
            {{gradingtype}}
        </p>
    {{/gradingtype}}

    <div class="gradedetails">
        {{#groups}}
            <div class="groupgradedetails">
                <h4>{{groupname}}</h4>
                <ol class="scoredetails">
                    {{#scoredetails}}
                        <li>
                            {{score}} / {{maxscore}} = {{percent}}%
                        </li>
                    {{/scoredetails}}
                </ol>
            </div>
        {{/groups}}
    </div>
{{/showpartialwrong}}
